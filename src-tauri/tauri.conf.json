{
	"build": {
		"beforeDevCommand": "pnpm dev",
		"beforeBuildCommand": "pnpm build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": false
	},
	"package": {
		"productName": "GearDB",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
            "fs": {
                "all": false,
                "copyFile": false,
                "createDir": false,
                "exists": true,
                "readDir": false,
                "readFile": true,
                "removeDir": false,
                "removeFile": false,
                "renameFile": false,
                "scope": [],
                "writeFile": true
            },
			"dialog": {
				"open": true,
				"save": true
			},
			"globalShortcut": {
				"all": true
			},
			"shell": {
				"all": false,
				"open": true
			}
		},
		"bundle": {
			"active": true,
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "com.tauri.dev",
			"targets": "all"
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"resizable": true,
				"title": "GearDB",
				"width": 800,
				"height": 600
			}
		]
	}
}
